# Production Environment Variables
# Copy this to .env for deployment

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=EmployeeManagement2024!SecurePass
MONGO_DATABASE=employee_management

# Application Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Security Configuration
JWT_SECRET=super-long-random-jwt-secret-key-for-employee-management-production-2024-change-this
JWT_EXPIRES_IN=30d

# Client Configuration - UPDATE THIS WITH YOUR ACTUAL DOMAIN/IP
CLIENT_URL=http://your-server-ip:3000
# For production with domain: CLIENT_URL=https://yourdomain.com

# Database URL (internal Docker network)
MONGODB_URI=mongodb://admin:EmployeeManagement2024!SecurePass@mongodb:27017/employee_management?authSource=admin

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Headers
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://your-server-ip:3000

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log